
<% include ../partials/header %>


    
    <h1 style="text-align: center;">Edit <%=campground.name%></h1>
    <div style="width:40%; margin: 0 auto;">
        <form class="form-horizontal"  action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST" >
         <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" id="name" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" id="image" type="text" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <label for="image">price</label>
                    <input class="form-control" id="price" type="Number" name="campground[price]" value="<%= campground.price %>">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" id="description" type="text" name="campground[description]" value="<%= campground.description %>">
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campground.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
          <div class="form-group">
                <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">Go back</a>
          </div>
          
        </form> 
    </div>    


<% include ../partials/footer %>